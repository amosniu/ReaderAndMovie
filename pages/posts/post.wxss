swiper{
  width: 100%;
  height: 500rpx;
  
}
swiper image{
  width: 100%;
  height: 100%;
}
.post-container{
  /* 弹性模型 */
  display: flex;
  /* 列排布 */
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  /* 下边线 */
  border-bottom: 1px solid #ededed;
  /* 上边线 */
  border-top: 1px solid #ededed;
  /* 列边距 */
  padding-bottom: 5px;
}
.post-author-date{
  /* margin-top: 10rpx;
  margin-bottom: 20rpx;
  margin-left: 10rpx;合并后依次为上、右、下、左 */
  margin: 10rpx 0rpx 20rpx 10rpx;
}
.post-author{
  width: 60rpx;
  height: 60rpx;
  /* 垂直居中 */
  vertical-align: middle;
}
.post-date{
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 10px;
  font-size: 26rpx;
}
.post-title{
  /* 字体加粗 */
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}
.post-image{
  margin-left: 16px;
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 15px;
}
.post-content{
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  /* 文本间距 */
  letter-spacing: 2rpx;
  /* 文字行高 */
  line-height: 40rpx;
}
.post-like{
  font-size: 13px;
  /* 行方向 */
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
}
.post-like-image{
  width: 16px;
  height: 16px;
  margin-right: 8px;
  vertical-align: middle;
}
.post-like-font{
  vertical-align: middle;
  margin-right: 20px;
}