page{
  height: 100%;
  background-color: #b3d4db;
}
/* 页面元素布局 */
.container{
  /* 将容器变成弹性的模型 */
  display: flex;
  /* 将排列方式变为垂直模式 */
  flex-direction: column;
  /* 页面元素居中 */
  align-items: center;
}

/* 头像图片的宽高像素 */
.head_image{
  width: 200rpx;
  height: 200rpx;
  margin-top: 160rpx;  
}

.hello_fonts{
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 50rpx;
}

/* 按钮的外观设计 */
.title_container{
  /* 外框线条粗细、颜色 */
  border: 1rpx solid #405f80;
  /* 外框宽高 */
  width: 200rpx;
  height: 70rpx;
  /* 圆角设置 */
  border-radius: 5rpx;
  /* 字体水平居中 */
  text-align: center;
  margin-top: 150rpx;
}

.title_fonts{
  font-size: 22rpx;
  font-weight: bold;
  /* 字体垂直居中，rpx值大小与外框的高度相等 */
  line-height: 70rpx;
  color: #405f80
}